@model SirketProje.Models.Istihdam
<h1 class="mx-auto">Istihdam Bilgi Güncelleme Paneli</h1>
<form asp-action="Guncelle" method="post">

    <div class="form-group mb-3">
        <input type="hidden" class="form-control" asp-for="@Model.IstihdamNo">
    </div>

    <div class="form-group mb-3">
        <label class="control-label" for="TCNO">T.C No:</label>
        <input type="text" class="form-control" asp-for="@Model.Tcno" minlength="11" maxlength="11" required>
    </div>
    <div class="form-group mb-3">
        <label class="control-label" for="proje">Proje:</label>
        <input class="form-control" asp-for="@Model.ProjeNo" required>

    </div>
    <div class="form-group mb-3">
        <label class="control-label" for="cSaat">Çalışma Saati:</label>
        <input class="form-control" asp-for="@Model.CalismaSaati" required>

    </div>
    <button class="btn btn-info" type="submit">Istihdam Güncelle</button>

</form>