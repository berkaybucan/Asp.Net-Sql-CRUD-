@model SirketProje.Models.Personel
<h1 class="mx-auto">Personel Bilgi Güncelleme Paneli</h1>
<form asp-action="Guncelle" method="post">
    <div class="row g-3 mb-3">
        <div class="col">
            <label class="control-label" for="Ad">Ad:</label>
            <input class="form-control" asp-for="@Model.PersonelAd" required>
        </div>
        <div class="col">
            <label class="control-label" for="Soyad">Soyad:</label>
            <input class="form-control" asp-for="@Model.PersonelSoyad" required>
        </div>
    </div>
    <div class="form-group mb-3">
        <label class="control-label" for="TCNO">T.C No:</label>
        <input  type="hidden" class="form-control" asp-for="@Model.Tcno" >
    </div>
    <div class="form-group mb-3">
        <label class="control-label" for="tarih">Doğum Tarihi:</label>
        <input class="form-control" asp-for="@Model.PersonelDogumTarihi" required>

    </div>
    <div class="form-group mb-3">
        <label class="control-label" for="cinsiyet">Cinsiyet:</label>
        <select asp-for="@Model.PersonelCinsiyet">
            <option value=".">...</option>
            <option value="Erkek">Erkek</option>
            <option value="Kadın">Kadın</option>
        </select>
    </div>
    <div class="form-group mb-3">
        <label class="control-label" for="maas">Maaş:</label>
        <input class="form-control" asp-for="@Model.PersonelMaas" required>
    </div>
    <div class="form-group mb-3">
        <label class="control-label" for="adres">Adres:</label>
        <input class="form-control" asp-for="@Model.PersonelAdres" required>
    </div>
    <div class="form-group mb-3">
        <label class="control-label" for="departman">Departman:</label>
        <input class="form-control" asp-for="@Model.PersonelDepartmanId" required>

    </div>
    <button class="btn btn-info" type="submit">Personel Güncelle</button>

</form>